<div id="featured">
	
	<div class="container">
		<div class="idiom_select">
		<a href='/en/'><image class="idiom_img" src="/images/gb.png"></a>
		<a href='/es/'><image class="idiom_img" src="/images/es.png"></a>
	</div>
		<div class="row">
			<div class="12u">
				<section>
					<header>
						<h2><%= I18n.t('first_line') %></h2>
					</header>
					<div class="form">
						<form action="form" method="post">						
							<p><%= I18n.t('form_host_name') %>
							<input type="text" name="whoinvites" placeholder="Nombre" required=true>
							</p>
							<p><%= I18n.t('form_event_date') %>
								<input type="text" name="eventdate" placeholder="Fecha" required=true>
							</p>
							<p><%= I18n.t('form_place') %>
								<input type="text" name="eventplace" placeholder="Lugar" required=true>
							</p>
							<p><%= I18n.t('form_guest_name') %>
								<input type="text" name="guestname" placeholder="Invitado" required=true>
							</p>
							<p><%= I18n.t('form_event') %>
								<input type="text" name="event" placeholder="Evento..." required=true>
							</p>
							<center><input type="submit" class="button_class" value="<%= I18n.t('form_value') %>"></center>
						</form>
					</div>
				</section>
			</div>
		</div>
	</div>
</div>